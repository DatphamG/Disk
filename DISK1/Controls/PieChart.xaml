<UserControl x:Class="DISK1.Controls.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             local="clr-namespace:DISK1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Chart -->
        <Viewbox Grid.Column="0" Margin="10">
            <Canvas x:Name="canvasChart" Width="200" Height="200" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Slices will be added here dynamically -->
            </Canvas>
        </Viewbox>

        <!-- Legend -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <StackPanel x:Name="stackLegend">
                <!-- Legend items will be added here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
